<Window x:Class="v_shooter_path.NewLvlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:v_shooter_path"
        mc:Ignorable="d"
        Title="Create new level" Height="160" Width="200" FontFamily="ArcadeClassic" FontSize="16" WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical" Margin="5">
        <TextBlock>World Grid X</TextBlock>
        <TextBox Name="tb_world_grid_x" Text="20" />
        <TextBlock>World Grid Y</TextBlock>
        <TextBox Name="tb_world_grid_y" Text="500" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="Btn_Cancel" Margin="10, 5" Click="Btn_Cancel_Click">
                <TextBlock Margin="5">Cancel</TextBlock>
            </Button>
            <Button Name="Btn_Create" Margin="10, 5" Click="Btn_Create_Click">
                <TextBlock Margin="5">Create</TextBlock>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
